@{
    ViewBag.Title = "Home Page";
}


<!-- display heart rate -->
<div class="container">
    <div class="heart animated-slow css">
        <div id="rate">0</div>
        <div id="bandName">-</div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/Scripts/jquery-2.2.1.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <!--Add script to update the page and send messages.-->
    <script type="text/javascript">

        // track heart rate
        var heartRate = 0;
        var live;

        $(document).ready(function () { 
        });

        $(function () {
            // Declare a proxy to reference the hub
            var hub = $.connection.bandOnTheRunHub;

            // signalr 
            // this function is called by the server hub via signalr to broadcast the current heart rate
            hub.client.broadcastMessage = function (bandName, hrValue) {
                console.log("changed");
                func = null;
                document.getElementById("rate").innerText = hrValue;
                document.getElementById("bandName").innerText = bandName;
                live = new Date();                
                setTimeout(function () {
                    _final = new Date();
                    var seconds = ((_final.getTime() - live.getTime()) / 1000 | 0);
                    console.log(seconds);
                    if (seconds > 19) {
                        heartRate = 1;
                        document.getElementById("rate").innerText = 1;
                    }
                }, 20000)
                heartRate = parseInt(hrValue);
            };

            // Start the connection.
            $.connection.hub.start().done(function () {
            });
        });



        function AnimationListener() {
            
            heart.classList.remove('animated-slow');
            heart.classList.remove('animated-medium');
            heart.classList.remove('animated-fast');
            heart.classList.remove('animated-very-fast');

            if (inRange(heartRate, 0, 80)) {
                heart.classList.add('animated-slow');
            }
            else if (inRange(heartRate, 80, 90)) {
                heart.classList.add('animated-medium');
            }
            else if (inRange(heartRate, 90, 100)) {
                heart.classList.add('animated-fast');
            }
            else {
                heart.classList.add('animated-very-fast');
            }
        }

        function inRange(x, min, max) {
            return min <= x && x <= max;
        }

        var heart = document.getElementsByClassName('heart')[0];
        heart.addEventListener("animationiteration", AnimationListener, false);
    </script>
}